{
  "author": {
    "name": "Danilo VasojeviÄ‡"
  },
  "publisher": "DaniloVasojevic",
  "name": "jira-ticket-linker-for-test",
  "displayName": "Jira Ticket Linker for Test",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danilo-vasojevic/jira-ticket-linker-for-test.git"
  },
  "description": "Make Jira tickets in scripts and markdown clickable",
  "icon": "img/icon.jpg",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Testing",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  }
}
